<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="12dp"
    android:layout_marginVertical="6dp"
    android:background="@drawable/bg_item_cart">

    <ImageView
        android:id="@+id/imgProductCart"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/sample_product"
        android:scaleType="centerCrop"
        android:layout_marginEnd="12dp" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1">

        <TextView
            android:id="@+id/tvNameCart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nama Produk"
            android:textStyle="bold"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tvPriceCart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rp 50.000"
            android:textColor="#009688"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tvQuantityCart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Qty: 1"
            android:textSize="13sp"
            android:textColor="#666" />
    </LinearLayout>

    <ImageView
        android:id="@+id/btnRemoveCart"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:src="@drawable/ic_delete"
        android:contentDescription="Remove item" />
</LinearLayout>
